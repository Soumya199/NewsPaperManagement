@model NewsPaperAdvertisementManagement.Models.Advertisement

@{
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";

}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<h2>RequestForAds</h2>
@using (Html.BeginForm("RequestForAds", "Advertisement", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="font-size:16px">
        <h4>Advertisement Detail</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.AdvertisementName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.AdvertisementName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AdvertisementName, "", new { @class = "text-danger" })
            </div>

            @Html.LabelFor(model => model.AdvertisementDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.AdvertisementDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AdvertisementDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AdvertisementDescription, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.TextAreaFor(model => model.AdvertisementDescription, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AdvertisementDescription, "", new { @class = "text-danger" })
            </div>

            @Html.LabelFor(model => model.AdvertisementImage, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                <input type="file" name="ImageFile" required />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AdvertisementDimension, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.DropDownList("AdvertisementDimension", new List<SelectListItem>
                {
          new SelectListItem{Text="4 x 5", Value="4 x 5"},
          new SelectListItem{Text="8 x 4", Value="8 x 4"},
          new SelectListItem{Text="8 x 5", Value="8 x 5"},
           }, "Select Dimension")
                @Html.ValidationMessageFor(model => model.AdvertisementDimension, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div style="text-align:center;">
                <input type="submit" value="Request" class="btn btn-success" style="font-size:20px" />
            </div>
        </div>
    </div>
    @section Scripts{
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    }
}


